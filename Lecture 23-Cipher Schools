#include <iostream>
using namespace std;
int main() {
    int a=5;
    int *p;
    p=&a;
    cout<<"Address of a is "<<p<<endl;
    cout<<p+1<<endl;
    cout<<p+2;
    return 0;
}

#include <iostream>
using namespace std;
int main() {
    int a[5];
    int *x;
    x=&a[0];
    for(int i=0;i<=5;i++){
        cout<<&a[i]<<endl;
    }
    return 0;
}

